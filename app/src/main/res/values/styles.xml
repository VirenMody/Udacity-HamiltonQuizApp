<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QRadioButtons" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#a8980f</item>
        <item name="colorControlActivated">#a8980f</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QCheckBoxes" parent="Base.Theme.AppCompat">
        <item name="colorAccent">#a8980f</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">#a8980f</item> <!-- for check state -->
    </style>

</resources>
